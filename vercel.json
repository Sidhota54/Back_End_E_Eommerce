{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",     
      "dest": "/index.js"     
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)", 
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://shopfromhome.vercel.app" 
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true" 
        },
        {
          "key": "Set-Cookie",
          "value": "SameSite=None; Secure" 
        }
      ]
    }
  ]
}